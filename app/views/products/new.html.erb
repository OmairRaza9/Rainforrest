

<%= form_for @product, url: {action: "create"} do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :price %>
<%= f.number_field :price %><br>
<%= f.label :description %>
<%= f.text_area :discription %><br>
<%= f.submit "Create" %><br>
<% end %>


<%= @product.errors.full_messages.count %>

<% @product.errors.full_messages.each do |message| %>
  <div><%= message %></div>
<% end %>
